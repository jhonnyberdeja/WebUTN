<!DOCTYPE html>
<html lang="en">
<head>
    <%-include('../parcials/head.ejs')%>
</head>
<body class="background-background">

    <header><%-include('../parcials/nav.ejs')%></header>

    <main class="container">
        <div class="jumbotron">
            <div class="row">
                <% products.forEach(product => { %>
                    <div class="col-sm-3">
                        <div class="card" style="margin-top: 10px;min-height: 160px;">
                            <div class="card-body" style="background-color: burlywood;">
                              <h5 class="card-title"><%-product.name%></h5>
                              <p class="card-text"><%-product.description%></p>
                              <a href="#" class="btn btn-outline-dark">Agregar al carrito</a>
                              <a href="#" class="btn btn-dark">Comprar</a>
                            </div>
                        </div>
                    </div>    
                <% }) %>
            </div>
        </div>

    </main>

    <%-include('../parcials/bootstrap.ejs')%>

</body>
</html>